class UserSubmittedData {
    +Path path_to_src
    +int submission_id

    +void __init__(...)
}

skinparam enum {
    BackGroundColor Aqua
}

enum LanguageLabel {
    CXX
    CXX11
    CXX14
    CXX17
    CXX20

    PYTHON3

    HASKELL2010

    JAVA
    SCALA
}

class LanguageLabelHolder {
    +bool is_super_label_of(LanguageLabelHolder)
}

